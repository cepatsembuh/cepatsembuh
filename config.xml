<?xml version='1.0' encoding='utf-8'?>
<widget id="id.cepatsembuh" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cepat Sembuh</name>
    <description>
      An app to help people to find the nearest faskes in their location
    </description>
    <author>
      Andre Christoga
    </author>
    <content src="www/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="https://cepatsembuh.firebaseio.com" />
    <preference name="Orientation" value="portrait" />
    <icon src="www/img/icon.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="img/splash.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="img/splash.png" />
    </platform>
    <preference name="SplashScreenDelay" value="3000" />
</widget>
