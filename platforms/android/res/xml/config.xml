<?xml version='1.0' encoding='utf-8'?>
<widget id="id.cepatsembuh" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="3000" />
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <splash src="img/splash.png" />
    <name>CepatSembuh</name>
    <description>
      An app to help people to find the nearest faskes in their location
    </description>
    <author>
      Andre Christoga
    </author>
    <content src="www/index.html" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="https://cepatsembuh.firebaseio.com" />
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreenDelay" value="3000" />
    <icon src="www/img/icon.png" />
</widget>
